<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/chagePwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/changePw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#B5B5B5"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textColorHint="#7A7A7A"
        android:layout_marginTop="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/chagePwText"/>
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="· 특수기호(*&amp;^%$#@), 연속적인 문자 금지"
        android:textSize="12sp"
        android:textColor="#A1A1A1"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/changePw"
        app:layout_constraintTop_toBottomOf="@id/changePw"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#B5B5B5"
        android:hint="비밀번호 재입력"
        android:inputType="textPassword"
        android:textColorHint="#7A7A7A"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/a"/>
    <android.widget.Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_black"
        android:background="@drawable/ok_button"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>