<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입하고\n서비스를 사용해보세요!"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/inputid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#B5B5B5"
        android:hint="아이디 입력"
        android:inputType="text"
        android:textColorHint="#7A7A7A"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/a"/>
    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="· 6자 ~ 14자 사이로 설정"
        android:textSize="12sp"
        android:textColor="#A1A1A1"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/inputid"
        app:layout_constraintLeft_toLeftOf="@id/inputid"/>

    <EditText
        android:id="@+id/inputpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#B5B5B5"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textColorHint="#7A7A7A"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/b"/>
    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="· 특수기호(*&amp;^%$#@), 연속적인 문자 금지"
        android:textSize="12sp"
        android:textColor="#A1A1A1"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/inputpw"
        app:layout_constraintLeft_toLeftOf="@id/inputpw"/>
    <EditText
        android:id="@+id/reinputpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#B5B5B5"
        android:hint="비밀번호 재입력"
        android:inputType="textPassword"
        android:textColorHint="#7A7A7A"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/c"/>

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="개인정보 수집 및 이용동의 (필수)"
        android:textSize="17sp"
        android:textColor="#B5B5B5"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/reinputpw"
        app:layout_constraintLeft_toLeftOf="@id/reinputpw"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background = "#B5B5B5"
        app:layout_constraintTop_toBottomOf="@id/checkbox1"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"/>
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="개인정보 수집 및 이용동의 (필수)"
        android:textSize="15sp"
        android:textColor="#B5B5B5"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/line"/>
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="개인정보 제공동의 (필수)"
        android:textSize="15sp"
        android:textColor="#B5B5B5"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox2"
        app:layout_constraintLeft_toLeftOf="@id/checkbox2"/>
    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="서비스 알림동의 (선택)"
        android:textSize="15sp"
        android:textColor="#B5B5B5"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox3"
        app:layout_constraintLeft_toLeftOf="@id/checkbox3"/>

    <android.widget.Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_black"
        android:background="@drawable/ok_button"
        app:layout_constraintBottom_toBottomOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>