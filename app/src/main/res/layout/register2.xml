<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/inputNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호를 입력해주세요"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인인증을 위해 필요합니다"
        android:textSize="12sp"
        android:textColor="#848484"
        android:fontFamily="@font/roboto_thin"
        app:layout_constraintLeft_toLeftOf="@id/inputNumberText"
        app:layout_constraintTop_toBottomOf="@id/inputNumberText"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:hint = "인증번호 입력"
        android:textColorHint="#B5B5B5"
        android:backgroundTint="#B5B5B5"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/a"
        android:layout_marginTop="50dp"/>
    <android.widget.Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_black"
        android:background="@drawable/ok_button"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>